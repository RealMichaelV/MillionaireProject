<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FF0000"
    android:layout_height="match_parent"
    tools:context=".LostUI">
    <!--
This activity is when you lose the game of the millionaire show user interface
-->

    <ImageView
        android:id="@+id/winnericon"
        android:layout_width="208dp"
        android:layout_height="212dp"
        android:layout_marginStart="101dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/wontext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/lost" />

    <!--
id assigned
-->
    <TextView
        android:id="@+id/wontext"
        android:layout_width="384dp"
        android:layout_height="77dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:text="Ohhh No sorry you Lost the  Millionaire Game!"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent" />
    <!--
id assigned
-->

    <Button
        android:id="@+id/playbutton"
        android:layout_width="153dp"
        android:layout_height="52dp"
        android:layout_marginStart="158dp"
        android:layout_marginEnd="165dp"
        android:layout_marginBottom="16dp"
        android:background="#03A9F4"
        android:text="Play Again"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent" />   <!--
id assigned
-->

</androidx.constraintlayout.widget.ConstraintLayout>