<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#008000"
    android:layout_height="match_parent"
    tools:context=".WinUi">
    <!--
The Activity win user interface
-->


    <ImageView
        android:id="@+id/winnericon"
        android:layout_width="144dp"
        android:layout_height="150dp"
        android:layout_marginStart="91dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/wontext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/winner1" />

    <!--
id assigned
-->

    <TextView
        android:id="@+id/wontext"
        android:layout_width="207dp"
        android:layout_height="39dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:text="You have Won"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintStart_toStartOf="parent" />

    <!--
id assigned
-->

    <Button
        android:id="@+id/playbutton"
        android:layout_width="153dp"
        android:layout_height="52dp"
        android:layout_marginStart="158dp"
        android:layout_marginEnd="165dp"
        android:layout_marginBottom="16dp"
        android:background="#03A9F4"
        android:text="Play Again"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent" />

    <!--
id assigned
-->


    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="221dp"
        android:layout_marginEnd="228dp"
        android:layout_marginBottom="8dp"
        android:text="You are a Winner!"
        android:textColor="#F6F6F6"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <!--
id assigned
-->

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="77dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="16dp"
        android:text="Of the Millionaire Game!"
        android:textColor="#F6F6F6"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/winnericon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <!--
id assigned
-->

    <TextView
        android:id="@+id/amounttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="12dp"
        android:text="$"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/playbutton"
        app:layout_constraintEnd_toStartOf="@+id/won1" />
    <!--
id assigned
-->

    <TextView
        android:id="@+id/won1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="80dp"
        android:text="1,000,000"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!--
id assigned
-->

</androidx.constraintlayout.widget.ConstraintLayout>